---
import Layout from "../layouts/Layout.astro";
import { LoginForm } from "../components/LoginForm";

// TODO: Po implementacji middleware, sprawdzić czy użytkownik jest zalogowany
// i przekierować na stronę główną:
// if (Astro.locals.user) {
//   return Astro.redirect("/");
// }
---

<Layout title="Logowanie - MyFilms">
  <main class="flex min-h-[calc(100vh-3.5rem)] items-center justify-center px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight">Witaj ponownie!</h1>
        <p class="mt-2 text-muted-foreground">
          Zaloguj się do swojego konta MyFilms
        </p>
      </div>

      <!-- Login Form Card -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <LoginForm client:load />
      </div>

      <!-- Register Link -->
      <div class="text-center">
        <span class="text-sm text-muted-foreground">
          Nie masz jeszcze konta?{" "}
        </span>
        <a
          href="/register"
          class="text-sm font-medium hover:underline"
        >
          Zarejestruj się
        </a>
      </div>
    </div>
  </main>
</Layout>
