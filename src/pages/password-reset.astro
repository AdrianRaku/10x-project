---
import Layout from "../layouts/Layout.astro";
import { PasswordResetForm } from "../components/PasswordResetForm";

export const prerender = false;
---

<Layout title="Resetowanie hasła - MyFilms">
  <main class="flex min-h-[calc(100vh-3.5rem)] items-center justify-center px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight">Ustaw nowe hasło</h1>
        <p class="mt-2 text-muted-foreground">Wprowadź nowe hasło do swojego konta</p>
      </div>

      <!-- Password Reset Form Card -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <PasswordResetForm client:load />
      </div>
    </div>
  </main>
</Layout>
