---
import Layout from "../layouts/Layout.astro";
import { PasswordRecoveryForm } from "../components/PasswordRecoveryForm";

export const prerender = false;

// Redirect logged-in users to home page
if (Astro.locals.user) {
  return Astro.redirect("/");
}
---

<Layout title="Odzyskiwanie hasła - MyFilms">
  <main class="flex min-h-[calc(100vh-3.5rem)] items-center justify-center px-4 py-12">
    <div class="w-full max-w-md space-y-8">
      <!-- Header -->
      <div class="text-center">
        <h1 class="text-3xl font-bold tracking-tight">Odzyskiwanie hasła</h1>
        <p class="mt-2 text-muted-foreground">Wyślemy Ci instrukcje odzyskiwania hasła na podany adres e-mail</p>
      </div>

      <!-- Password Recovery Form Card -->
      <div class="rounded-lg border bg-card p-6 shadow-sm">
        <PasswordRecoveryForm client:load />
      </div>
    </div>
  </main>
</Layout>
